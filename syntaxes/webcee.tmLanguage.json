{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "WebCee",
  "scopeName": "source.webcee",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#keywords" },
    { "include": "#numbers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.webcee",
          "match": "//.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.webcee",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.webcee",
              "match": "\\\\(\\\\|\\\"|n|r|t)"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.webcee",
          "match": "\\b\\d+(?:\\.\\d+)?\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.webcee",
          "match": "\\bwce_(?:container|row|col|card|panel|text|button|input|slider|progress)\\b"
        },
        {
          "name": "support.function.webcee",
          "match": "\\bwce_(?:css|bind|on_click)\\b"
        }
      ]
    }
  }
}
